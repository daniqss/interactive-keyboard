{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "interactive-keyboard",
  "version": "0.1.2",
  "identifier": "com.interactive-keyboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Interactive Keyboard",
        "width": 1500,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/audio/elephant_sound.wav",
      "assets/audio/tiger_sound.wav",
      "assets/audio/dog_sound.wav",
      "assets/audio/dolphin_sound.wav"
    ]
  }
}
